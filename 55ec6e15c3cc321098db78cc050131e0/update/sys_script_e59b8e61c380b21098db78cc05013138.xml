        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
    if (current.isNewRecord() && current.u_patient_id.nil()) {
        // Generate Patient ID: PAT-YYYY-NNNN format
        var date = new GlideDateTime();
        var year = date.getDisplayValue().substring(0, 4);
        
        // Get next sequence number
        var gr = new GlideRecord('u_patient_record');
        gr.orderByDesc('sys_created_on');
        gr.setLimit(1);
        gr.query();
        
        var nextNum = 1;
        if (gr.hasNext()) {
            gr.next();
            var lastId = gr.getValue('u_patient_id');
            if (lastId && lastId.indexOf('PAT-' + year + '-') === 0) {
                var numPart = lastId.substring(9);
                nextNum = parseInt(numPart) + 1;
            }
        }
        
        var paddedNum = ('0000' + nextNum).slice(-4);
        current.u_patient_id = 'PAT-' + year + '-' + paddedNum;
    }
})(current, previous);]]></script>
